# Server Configuration
NODE_ENV=development
PORT=5000

# Database Connection
DATABASE_URI=mongodb://localhost:27017/secure-ecommerce
DATABASE_PASSWORD=your_secure_password_here

# JWT Authentication
JWT_SECRET=your_secure_jwt_secret_should_be_at_least_32_chars_long
JWT_EXPIRES_IN=90d
JWT_COOKIE_EXPIRES_IN=90

# Cookie Security
COOKIE_SECRET=your_secure_cookie_secret_key_here

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000

# Email Service (choose your provider)
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Secure E-Commerce

# Sendgrid Email Service
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Stripe Payment Processing
STRIPE_SECRET_KEY=your_stripe_sk_test_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Security Settings
PASSWORD_RESET_TIMEOUT=600000 # 10 minutes in milliseconds
VERIFICATION_TIMEOUT=86400000 # 24 hours in milliseconds

# Logging
LOG_LEVEL=debug

# DO NOT include sensitive information in this example file
# Create an actual .env file with your real credentials
# Keep your .env file out of version control